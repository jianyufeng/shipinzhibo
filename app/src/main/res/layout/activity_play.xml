<LinearLayout android:id="@+id/root"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@mipmap/main_bkg"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp">
        <!--播放的容器-->
        <com.tencent.rtmp.ui.TXCloudVideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:visibility="gone"/>
        <!--cpu 等状态-->
        <TextView
            android:id="@+id/logViewStatus"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="110dp"
            android:background="#60ffffff"
            android:padding="2dp"
            android:scrollbars="vertical"
            android:textColor="#333333"
            android:textSize="10sp"
            android:textStyle="bold"
            android:typeface="monospace"/>
        <!--点播的控制器-->
        <LinearLayout
            android:id="@+id/play_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/play_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00:00"
                android:textSize="16sp"/>
            <SeekBar
                android:id="@+id/seekbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="18"
                android:max="0"
                android:maxHeight="2.0dip"
                android:minHeight="2.0dip"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:progress="0"/>
            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="--:--"
                android:textSize="16sp"/>

        </LinearLayout>
        <!--底部的功能按钮-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_gravity="bottom">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btnPlay"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@mipmap/play_start"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btnLog"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@mipmap/log_show"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btnHWDecode"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@mipmap/quick"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btnOrientation"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@mipmap/landscape"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btnRenderMode"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@mipmap/fill_mode"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btnCacheStrategy"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@mipmap/cache_time"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btnStop"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@mipmap/close_press"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
        <!--播放时的戒断状态-->
        <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@id/logViewStatus"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="167dp"
            android:background="#eee"
            android:fadeScrollbars="true"
            android:scrollbars="vertical">
            <TextView
                android:id="@+id/logViewEvent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:scrollbars="vertical"
                android:textColor="#333333"
                android:textSize="13dp"/>
        </ScrollView>
        <!--加载中的动画-->
        <ImageView
            android:id="@+id/loadingImageView"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:src="@drawable/loading_animation"
            android:visibility="gone"/>
        <!--选择在缓存策略的不同-->
        <LinearLayout
            android:id="@+id/layoutCacheStrategy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="0dp"
            android:background="#FFFFFF"
            android:clickable="true"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="缓存策略"
                android:textColor="#ff888888"
                android:textSize="16sp"/>
            <RadioGroup
                android:id="@+id/cacheStrategyRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="25dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <RadioButton
                    android:id="@+id/radio_btn_fast"
                    style="@style/RadiobuttonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:background="@drawable/resolution_radio"
                    android:tag="1"
                    android:text="极速"
                    android:textColor="@color/resolution_radio_color"/>

                <RadioButton
                    android:id="@+id/radio_btn_smooth"
                    style="@style/RadiobuttonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/resolution_radio"
                    android:tag="2"
                    android:text="流畅"
                    android:textColor="@color/resolution_radio_color"/>

                <RadioButton
                    android:id="@+id/radio_btn_auto"
                    style="@style/RadiobuttonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/resolution_radio"
                    android:checked="true"
                    android:tag="3"
                    android:text="自动"
                    android:textColor="@color/resolution_radio_color"/>
            </RadioGroup>
        </LinearLayout>

        <!--标题-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="41dp">

            <LinearLayout
                android:id="@+id/back_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:src="@mipmap/btn_back_gray"/>
                <TextView
                    android:id="@+id/back_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:gravity="center_vertical"
                    android:text="返回"
                    android:textColor="#ffffff"
                    android:textSize="14dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="衰哥一枚"
                android:textColor="#ffffff"
                android:textSize="18dp"/>
        </FrameLayout>
        <!--主播信息-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/gray_radius_rectangle"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/circle"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <LinearLayout android:layout_width="match_parent"
                                      android:layout_height="0dp"
                                      android:layout_weight="1"
                                      android:orientation="horizontal">
                            <TextView
                                android:maxWidth="50dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:singleLine="true"
                                android:text="艾尼"
                                android:ellipsize="end"
                                android:textColor="#fff"
                                android:textSize="12sp"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="match_parent"
                                      android:layout_height="0dp"
                                      android:layout_weight="1"
                                      android:orientation="horizontal">
                            <TextView
                                android:gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:background="@drawable/red_radius_rectangle"
                                android:text="小小星光"
                                android:textColor="#fff"
                                android:textSize="10sp"/>
                            <TextView
                                android:gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="1555w万"
                                android:textColor="#fff"
                                android:textSize="12sp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="关注"
                        android:textColor="#f00"
                        android:textSize="14sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <HorizontalScrollView
                            android:scrollbars="none"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="5dp"
                        >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_marginLeft="10dp"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:background="@drawable/red_circle"/>
                                <ImageView
                                    android:layout_marginLeft="10dp"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:background="@drawable/red_circle"/>
                                <ImageView
                                    android:layout_marginLeft="10dp"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:background="@drawable/red_circle"/>
                                <ImageView
                                    android:layout_marginLeft="10dp"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:background="@drawable/red_circle"/>
                            </LinearLayout>
                        </HorizontalScrollView>

                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:background="@drawable/gray_radius_rectangle"
                    android:gravity="center"
                    android:text="210"
                    android:textColor="#fff"/>
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</LinearLayout>
